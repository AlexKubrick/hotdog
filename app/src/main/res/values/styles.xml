<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearance Subtitle1 style -->
    <style name="TextAppearance.Hotdog.Subtitle1"
        parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- TextView style -->
    <style name="Widget.Hotdog.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <!-- Final price TextView style -->
    <style name="Widget.Hotdog.TextView.FinalPrice" parent="Widget.Hotdog.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <!-- TextView style for an order summary label -->
    <style name="Widget.Hotdog.TextView.Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- TextView style for an order summary entry -->
    <style name="Widget.Hotdog.TextView.OrderSummary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Radio Button style -->
    <style name="Widget.Hotdog.CompoundButton.RadioButton"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingEnd">@dimen/radio_button_padding</item>
        <item name="android:paddingStart">@dimen/radio_button_padding</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Divider style -->
    <style name="Widget.Hotdog.Divider" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

    <!-- StartFragment buttons style -->
    <style name="Widget.Hotdog.StartButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/red_pink</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>